<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.azizanhakim.midwife.Activity.MainActivity"
android:orientation="vertical"
android:background="@drawable/backgroundbatik">


<TextView
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_weight="1"
    android:fontFamily="times new roman"
    android:gravity="center"
    android:text="@string/nama_kampus"
    android:textColor="#dbf9fc"
    android:textSize="26sp"
    android:textStyle="bold" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:layout_weight="2.5"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/logobk"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6"
    android:orientation="vertical">

    <Button
        android:id="@+id/menu1"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_solid"
        android:fontFamily="sans-serif"
        android:text="@string/menu1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/menu2"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button_solid"
        android:fontFamily="sans-serif"
        android:text="@string/menu2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/menu3"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button_solid"
        android:fontFamily="sans-serif"
        android:text="@string/menu3"
        android:textColor="#C21513"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <!--<ImageView
            android:id="@+id/pengguna"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/user"
            android:layout_marginBottom="5dp"/>-->
        <ImageView
            android:onClick="showPopup"
            android:id="@+id/penggunaan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/info"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:id="@+id/keluar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/keluar"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
</LinearLayout>
