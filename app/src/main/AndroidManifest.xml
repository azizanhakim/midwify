        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/midwify_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".Service.Fbase">
        <activity android:name=".Activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Login"
            android:label="Login"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".Activity.ProfileActivity"
            android:label="Profile Mahasiswi"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Activity.SignUp"
            android:label="Sign Up"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Activity.MainActivity"
            android:label="Menu Utama"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Activity.Midwify"
            android:label="Tanya MidWify"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Activity.Quiz"
            android:label="Quizz"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Activity.MidwifySuara"
            android:label="Midwify Voice"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Activity.Statistik"
            android:label="Statistik"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>